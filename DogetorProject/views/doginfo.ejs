<!DOCTYPE html>
<html>

<head>
    <title>Dog info</title>
    <link rel="stylesheet" type="text/css" href="/static/bootstrap.css">
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Mono:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
        crossorigin="anonymous">
    <link rel="stylesheet" href="/static/hmoe.css">
    <script src="https://cdn.jsdelivr.net/npm/vue"></script> <!-- For use Vue.JS -->
</head>

<body>

    <!--  Navbar Start--------------------------------------------------------------------------------------------------->
    <%- include('navbar') %>
    <!--  Navbar End------------------------------------------------------------------------------------------------->
      <!--  Topbar Start------------------------------------------------------------------------------------------------->
      <!-- <%- include('topbar') %> -->
        <!--  Topbar End------------------------------------------------------------------------------------------------->
    <div class="container">
        <div class="row">
            <!--  Side bar Start--------------------------------------------------------------------------------------------->
            <%- include('sidebar') %>
            <!--Side bar End---------------------------------------------------------------------------------------------->
            <!--Dog info start---------------------------------------------------------------------------------------------->
            <div class="col-8 content">
                <div id="doginfo" class="row">
                    <div class="col-4"><img id="dogprofilepics" src="/image/dog/<%=dogPic%>" alt=""></div>
                    <div class="col-4">
                        <h1><%=dogName%></h1>
                        <table>
                            <tr>
                                <td>Breed</td>
                                <td> : </td>
                                <td><%=breed%></td>
                            </tr>
                            <tr>
                                <td>Age</td>
                                <td> : </td>
                                <td><%=age%></td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td> : </td>
                                <td><%=gender%></td>
                            </tr>
                        </table>
                    </div>
                    <div class = "col-3">
                        <button id = "updatedog" class = "btn doginfobtn" data-toggle="modal" data-target="#updatedogModal"><h5>Update Dog info</h5></button>
                        <button id = "deletedog" class = "btn doginfobtn" data-toggle="modal" data-target="#deletedogModal"><h5>Delete Dog account</h5></button>

                    </div>
                </div>
                <!--Dog info end---------------------------------------------------------------------------------------------->
                <!--Dog info update modal start---------------------------------------------------------------------------------------------->
                <div class="modal fade" id="updatedogModal" tabindex="-1" role="dialog" aria-labelledby="updatedogTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="updatedogTitle">Update dog info</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class = "modal-body">
                            <h3>Update to</h3>
                            <form action="/editDog" method="POST">
                            <div class="form-group">
                                    <label>Name:</label>
                                    <input type="text" name="dogName" value="<%=dogName%>" class="form-control" placeholder="name">
                            </div>
                            <div class="form-group">
                                <label>Age(year):</label>
                                <input type="number" min="0" name="dogAge" value="<%=age%>" class="form-control" placeholder="age">
                            </div>
                            <div class="form-group">
                                <label>Breed:</label>
                                <input type="text" name="dogBreed" value="<%=breed%>" class="form-control" placeholder="breed">
                            </div>
                            <div class="form-group">
                                <label>Gender:</label><br>
                                <input type="radio" name="gender" value="male"> Male
                                <input type="radio" name="gender" value="female"> Female<br>
                            </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit"  class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                      </div>
                    </div>
                  </div>
                <!--Dog info update modal end---------------------------------------------------------------------------------------------->
                <!--Dog info delete modal start---------------------------------------------------------------------------------------------->
                <div class="modal fade" id="deletedogModal" tabindex="-1" role="dialog" aria-labelledby="deletedogTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deletedogTitle">Delete dog account</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          Are you sure?, your dog's data and appointment data will lost permanently.
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <a href="/deletedog"> <button type="button"  class="btn btn-primary">Confirm</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                <!--Dog info delete modal end---------------------------------------------------------------------------------------------->

                <!--Schedule start---------------------------------------------------------------------------------------------->
                <h1 id="schedulehead"></h1>
                <table class="schedule ">
                    <thead class="schedule">
                        <tr id = "dayfull">
                            <td class="dogday">Sunday</td>
                            <td class="dogday">Monday</td>
                            <td class="dogday">Tuesday</td>
                            <td class="dogday">Wednesday</td>
                            <td class="dogday">Thursday</td>
                            <td class="dogday">Friday</td>
                            <td class="dogday">Saturday</td>
                        </tr>
                        <tr id = "dayacro">
                            <td class="dogday">Sun</td>
                            <td class="dogday">Mon</td>
                            <td class="dogday">Tue</td>
                            <td class="dogday">Wed</td>
                            <td class="dogday">Thu</td>
                            <td class="dogday">Fri</td>
                            <td class="dogday">Sat</td>
                        </tr>
                    </thead>
                    <tbody id = "calendar">
                        <% for(var i=0; i<6; i++) {%>
                            <tr>
                                <% for(var j=0; j<7; j++) {%>
                                    <td  class = "dogeachday" ><a href="#" class = "dogeach" onclick="eachdayclick(this.innerHTML)"></a></td>
                                <% } %>     
                            </tr>
                         <% } %>
                    </tbody>
                </table>
                <div class = "row">
                    <div class = "rounded col-6"  align ="left">
                        <button id = "prembtn" class = "btn"">Last month</button>
                    </div>
                    <div class = "rounded col-6"  align ="right">
                        <button id = "nxtmbtn" class = "btn" ">Next month</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Schedule end---------------------------------------------------------------------------------------------->
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="/static/homee.js"></script>
<script src="/static/calendar_dog.js"></script>
</html>