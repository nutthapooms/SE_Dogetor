<!DOCTYPE html>
<html>

<head>
	<title>Hospital info</title>
	<link rel="stylesheet" type="text/css" href="/static/bootstrap.css">
	<link href="https://fonts.googleapis.com/css?family=IBM+Plex+Mono:400,700" rel="stylesheet">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
	 crossorigin="anonymous">
    <link rel="stylesheet" href="/static/vetInfo.css">
	<link rel="stylesheet" href="/static/hmoe.css">
    
	<script src="https://cdn.jsdelivr.net/npm/vue"></script> <!-- For use Vue.JS -->
</head>

<body>

	<!--  Navbar Start--------------------------------------------------------------------------------------------------->
	<%- include('navbar') %>
	<!--  Navbar End------------------------------------------------------------------------------------------------->

	<div class="containerr">
		<div class="row">
			<!--  Side bar Start--------------------------------------------------------------------------------------------->
			<%- include('sidebar') %>
			<!--Side bar End---------------------------------------------------------------------------------------------->
			<!--Hospital info begin---------------------------------------------------------------------------------------------->
			<div class=" container col-8">
				<div class="row">
                    <div class="col-9 titleEvent">
                        <h1>Vet Information</h1>
                    </div>
                    
                </div>
                <% for (var vet of vet){%>
                <div id="infod" class="contentCard row">
                    <div class="col-4 cardTitle">
						<img class="rounded" src="/image/doge0.jpg" class ="vetPic" height="110" width="auto">
                        <h5><%=vet.name %></h5>

                        <h5><%=vet.surname %></h5>
                        <br>
                        <% if(info.vet.length ==0){ %>
                            <a href="/vetlike?id=<%=vet.name%>" class="btn btn-info btn-lg"><i class="fa fa-star " style="color:white"></i></a>
    
    
    
                            <% } 
                            else{ %>
    
                            <% if(info.vet.includes(vet.name) ){ %>
                            <a href="/vetunlike?id=<%=vet.name%>" class="btn btn-info btn-lg"><i class="fa fa-star" style="color:yellow"></i></a>
    
    
                            <% } else { %> <a href="/vetlike?id=<%=vet.name%>" class="btn btn-info btn-lg"><i class="fa fa-star" style="color:white"></i></a>
                            <% } %>
    
                            <% } %>
                        <!-- <h5>Location</h5> -->
                    </div>
                    <div class="col-8 cardContent">
                        <h4>Information</h4>
                        <h5><%=vet.hos %></h5>
                        
                        <h5><%=vet.phone %></h5>
                        

                    </div>
                </div>
                <% } %>
			</div>
			<!--Hospital info End---------------------------------------------------------------------------------------------->
        </div>
    </div>
			

</body>
